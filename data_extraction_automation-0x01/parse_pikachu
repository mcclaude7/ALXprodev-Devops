#!/bin/bash

# Script to extract Pok√©mon data from JSON file
# Uses jq, awk, and sed for data manipulation

# Check if data.json exists
if [ ! -f "data.json" ]; then
    echo "Error: data.json file not found!"
    exit 1
fi

# Extract data using jq and format with awk and sed
name=$(jq -r '.name' data.json | awk '{print toupper(substr($0,1,1)) tolower(substr($0,2))}')
height=$(jq -r '.height' data.json | awk '{printf "%.1f", $1/10}')
weight=$(jq -r '.weight' data.json | awk '{printf "%.0f", $1/10}')
type=$(jq -r '.types[0].type.name' data.json | awk '{print toupper(substr($0,1,1)) tolower(substr($0,2))}')

# Format the final output
echo "$name is of type $type, weighs ${weight}kg, and is ${height}m tall."
