#!/bin/bash

# Output CSV file
output_file="pokemon_report.csv"

# Write CSV header
echo "Name,Height (m),Weight (kg)" > "$output_file"

# Variables to accumulate totals for averages
total_height=0
total_weight=0
count=0

# Loop over each JSON file in pokemon_data directory
for file in pokemon_data/*.json; do
    # Extract fields using jq
    name=$(jq -r '.name' "$file")
    height_dm=$(jq '.height' "$file")    # height in decimeters
    weight_hg=$(jq '.weight' "$file")    # weight in hectograms

    # Convert height to meters and weight to kg
    height=$(awk "BEGIN {printf \"%.2f\", $height_dm / 10}")
    weight=$(awk "BEGIN {printf \"%.2f\", $weight_hg / 10}")

    # Append to CSV
    echo "$name,$height,$weight" >> "$output_file"

    # Accumulate totals
    total_height=$(awk "BEGIN {print $total_height + $height}")
    total_weight=$(awk "BEGIN {print $total_weight + $weight}")
    count=$((count + 1))
done

# Calculate averages
avg_height=$(awk "BEGIN {printf \"%.2f\", $total_height / $count}")
avg_weight=$(awk "BEGIN {printf \"%.2f\", $total_weight / $count}")

# Print summary
echo "CSV Report generated at: $output_file"
echo
cat "$output_file"
echo
echo "Average Height: $avg_height m"
echo "Average Weight: $avg_weight kg"
