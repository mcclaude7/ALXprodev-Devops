#!/bin/bash

# Ensure the file exists
if [ ! -f data.json ]; then
  echo "Error: data.json not found."
  exit 1
fi

# Extract values using jq
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')  # Capitalize first letter
height_m=$(jq '.height' data.json | awk '{ printf "%.1f", $1 / 10 }')
weight_kg=$(jq '.weight' data.json | awk '{ printf "%d", $1 / 10 }')
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')  # Capitalize first letter

# Format and display the output
echo "$name is of type $type, weighs ${weight_kg}kg, and is ${height_m}m tall."
